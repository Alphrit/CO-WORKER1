<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!-- Background image -->
        <ImageView
            android:id="@+id/iv_return_home_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/return_home30sec"
            android:contentDescription="@string/return_home_dialog"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Countdown text overlay -->
        <TextView
            android:id="@+id/tv_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#1E3A8A"
            app:layout_constraintTop_toTopOf="@id/iv_return_home_background"
            app:layout_constraintBottom_toBottomOf="@id/iv_return_home_background"
            app:layout_constraintStart_toStartOf="@id/iv_return_home_background"
            app:layout_constraintEnd_toEndOf="@id/iv_return_home_background"
            app:layout_constraintVertical_bias="0.56" />


        <!-- Cancel button (invisible clickable area over the "취소" button in the image) -->
        <View
            android:id="@+id/btn_cancel"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="@id/iv_return_home_background"
            app:layout_constraintStart_toStartOf="@id/iv_return_home_background"
            app:layout_constraintEnd_toEndOf="@id/iv_return_home_background"
            app:layout_constraintTop_toTopOf="@id/iv_return_home_background"
            app:layout_constraintVertical_bias="0.76" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
