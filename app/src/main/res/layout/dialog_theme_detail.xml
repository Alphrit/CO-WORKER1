<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardRoot"
        android:layout_width="1000dp"
        android:layout_height="600dp"
        android:layout_gravity="center"
        android:layout_margin="24dp"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- 왼쪽: 큰 이미지 + X 버튼 -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imgTheme"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="50dp"
                    android:background="@drawable/bg_theme_image_rounded"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true" />

                <ImageButton
                    android:id="@+id/btnClose"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="start|top"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/close"
                    android:padding="8dp"
                    android:src="@drawable/ic_close_24" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fillViewport="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/txtTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="50sp"
                            android:textColor="#203040"
                            android:maxLines="2" />

                        <TextView
                            android:id="@+id/txtCategory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textSize="20sp"
                            android:textColor="#0B84FF" />

                        <TextView
                            android:id="@+id/txtPeriod"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textSize="30sp"
                            android:textColor="#555555" />

                        <TextView
                            android:id="@+id/txtTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:textSize="30sp"
                            android:textColor="#555555" />

                        <TextView
                            android:id="@+id/txtTarget"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textSize="30sp"
                            android:textColor="#555555" />

                        <TextView
                            android:id="@+id/txtHow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textSize="30sp"
                            android:textColor="#555555" />

                        <TextView
                            android:id="@+id/txtDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:textSize="25sp"
                            android:textColor="#333333" />
                    </LinearLayout>
                </ScrollView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnStartNavigation"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="16dp"
                    android:text="길안내 시작하기"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#203040"
                    app:cornerRadius="28dp"
                    app:backgroundTint="#FFEB3B"
                    app:rippleColor="@android:color/transparent" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</FrameLayout>