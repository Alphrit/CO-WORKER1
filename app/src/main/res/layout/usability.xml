<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_usability">

  <include
      layout="@layout/usability1"
      android:id="@+id/usability1_container"
      android:visibility="visible"/>

  <include
      layout="@layout/usability2"
      android:id="@+id/usability2_container"
      android:visibility="gone"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="250dp"
      android:layout_marginTop="700dp"
      android:orientation="horizontal"
      android:weightSum="2">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cancel1"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginEnd="20dp"
        android:layout_weight="1"
        app:strokeColor="#3E3F40"
        app:strokeWidth="2dp">

      <TextView
          android:id="@+id/cancel"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="center"
          android:text="취소"
          android:fontFamily="@font/pretendardbold"
          android:textSize="25sp" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/submit1"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_weight="1"
        app:strokeColor="#3E3F40"
        android:clickable="false"
        app:strokeWidth="2dp">


      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="center"
          android:text="제출하기"
          android:fontFamily="@font/pretendardbold"
          android:textSize="25sp" />
    </com.google.android.material.card.MaterialCardView>
  </LinearLayout>

  <View
      android:id="@+id/dimOverlay"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="#80000000"
      android:visibility="gone" />

  <com.google.android.material.card.MaterialCardView
      android:id="@+id/modal"
      android:layout_width="650dp"
      android:layout_height="280dp"
      android:layout_centerInParent="true"
      android:visibility="gone">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/pretendardbold"
        android:text="경품을 수령할 전화번호를 입력해 주세요 (선택)"
        android:textAlignment="center"
        android:textSize="30sp" />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="215dp"
          android:fontFamily="@font/pretendardregular"
          android:text="· 설문 제출 시 응답 결과 및 경품 수령을 위한 개인 정보 활용에 동의함으로 간주됨\n· 추첨을 통해 경품이 제공되며, 조사 결과 및 전화번호는 2개월 후 즉시 폐기됨"
          android:textAlignment="center"
          android:textSize="17sp" />


      <com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="90dp"
    android:layout_marginHorizontal="50dp"
    android:paddingVertical="15dp"
    app:strokeColor="#3E3F40"
    app:strokeWidth="2dp"
    >

          <EditText
              android:id="@+id/phonenumber"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="  터치해서 작성해주세요"
              android:inputType="number"
              tools:ignore="TouchTargetSizeCheck" />
</com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="165dp"
        android:orientation="horizontal"
        android:weightSum="2">

      <com.google.android.material.card.MaterialCardView
          android:id="@+id/cancel2"
          android:layout_width="0dp"
          android:layout_height="40dp"
          android:layout_marginEnd="20dp"
          android:layout_weight="1"
          app:strokeColor="#3E3F40"
          app:strokeWidth="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/pretendardbold"
            android:gravity="center"
            android:text="취소"
            android:textSize="25sp" />
      </com.google.android.material.card.MaterialCardView>

      <com.google.android.material.card.MaterialCardView
          android:id="@+id/submit2"
          android:layout_width="0dp"
          android:layout_height="40dp"
          android:layout_marginStart="20dp"
          android:layout_weight="1"
          android:backgroundTint="#FFDD57"
          app:strokeColor="#3E3F40"
          app:strokeWidth="2dp">


        <TextView
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="제출하기"
            android:fontFamily="@font/pretendardbold"
            android:textSize="25sp"
            />
      </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
  </com.google.android.material.card.MaterialCardView>
</RelativeLayout>
