<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/topBar"
        layout="@layout/common_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />


    <com.google.android.material.card.MaterialCardView
        android:layout_width="180dp"
        android:layout_height="210dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="270dp"
        app:cardCornerRadius="0dp"
        app:strokeWidth="2dp"
        app:strokeColor="#5A5A5A"
        >
        <TextView
            android:id="@+id/qr_info"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="QR 다운로드"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/loadingtext"
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="로딩 중…"
            android:textSize="20sp"
            android:fontFamily="@font/pretendardregular"
            />
        <ImageView
            android:id="@+id/qr"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="20dp"
            />
    </com.google.android.material.card.MaterialCardView>
    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="당신은 CO-SHOW 탐험가 입니다"
            android:fontFamily="@font/pretendardbold"
            android:textColor="#3E3F40"
            android:textSize="55sp"
            android:textStyle="bold" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/certification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="300dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/certification"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CO-SHOW QUIZ PROGRAM"
            android:fontFamily="@font/pretendardbold"
            android:textSize="25sp"
            android:textColor="#CC000000"
            android:layout_marginTop="38dp"
            android:layout_marginStart="30dp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YYYYMMDD-0001"
            android:fontFamily="@font/pretendardbold"
            android:textSize="25sp"
            android:textColor="#CC000000"
            android:layout_gravity="right"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="30dp" />
        <TextView
            android:id="@+id/hash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A124-D678-EF45"
            android:fontFamily="@font/pretendardbold"
            android:textSize="25sp"
            android:textColor="#CC000000"
            android:layout_gravity="right"
            android:layout_marginTop="53dp"
            android:layout_marginEnd="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:gravity="center"
                android:text="CO-EXPLORER\n인증서"
                android:fontFamily="@font/pretendardbold"
                android:textColor="#CC000000"
                android:textSize="55sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="홍길동 님"
                android:fontFamily="@font/pretendardbold"
                android:textColor="#CC000000"
                android:textSize="35sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:gravity="center"
                android:text="위 사람은 CO-SHOW 2025 퀴즈 프로그램을 성실히 이수하고\n전시의 가치와 경험을 이해하였기에 이를 인증합니다."
                android:fontFamily="@font/pretendardbold"
                android:textColor="#CC000000"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </FrameLayout>




</RelativeLayout>