<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#FFFFFF"
    tools:ignore="RtlSymmetry">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="1000dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="0dp"
        android:paddingEnd="0dp"
        android:paddingBottom="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/g_right"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <TextView
            android:id="@+id/titleMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="22dp"
            android:text="THEME"
            android:textColor="#0B84FF"
            android:textSize="50sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/titleSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="테마별 안내"
            android:textColor="#0B84FF"
            android:textSize="30sp"
            app:layout_constraintBaseline_toBaselineOf="@id/titleMap"
            app:layout_constraintStart_toEndOf="@id/titleMap" />

        <include
            android:id="@+id/topBar"
            layout="@layout/common_top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <GridLayout
            android:id="@+id/Gridtheme"
            android:layout_width="match_parent"
            android:layout_height="550dp"
            app:layout_constraintBottom_toTopOf="@id/bottomBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleMap"
            android:orientation="horizontal"
            android:columnCount="3"
            android:rowCount="2"
            android:layout_marginTop="30dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btngrid1"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:paddingHorizontal="0dp"
                android:paddingVertical="0dp"
                android:textColor="#203040"
                android:textStyle="bold"
                android:layout_marginStart="30dp"
                app:cornerRadius="10dp"
                app:backgroundTint="#f0f0f0"
                app:rippleColor="@android:color/transparent" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btngrid2"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:paddingHorizontal="0dp"
                android:paddingVertical="0dp"
                android:textColor="#203040"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                app:cornerRadius="10dp"
                app:backgroundTint="#f0f0f0"
                app:rippleColor="@android:color/transparent" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btngrid3"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:paddingHorizontal="0dp"
                android:paddingVertical="0dp"
                android:textColor="#203040"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                app:cornerRadius="10dp"
                app:backgroundTint="#f0f0f0"
                app:rippleColor="@android:color/transparent" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btngrid4"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:paddingHorizontal="0dp"
                android:paddingVertical="0dp"
                android:textColor="#203040"
                android:textStyle="bold"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                app:cornerRadius="10dp"
                app:backgroundTint="#f0f0f0"
                app:rippleColor="@android:color/transparent" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btngrid5"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:paddingHorizontal="0dp"
                android:paddingVertical="0dp"
                android:textColor="#203040"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                app:cornerRadius="10dp"
                app:backgroundTint="#f0f0f0"
                app:rippleColor="@android:color/transparent" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btngrid6"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:paddingHorizontal="0dp"
                android:paddingVertical="0dp"
                android:textColor="#203040"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                app:cornerRadius="10dp"
                app:backgroundTint="#f0f0f0"
                app:rippleColor="@android:color/transparent" />
        </GridLayout>


        <LinearLayout
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#BAE7FF"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <!-- 왼쪽: 팜플렛 다운로드 버튼 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDownload"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="4"
                android:layout_marginStart="50dp"
                android:paddingHorizontal="0dp"
                android:paddingVertical="0dp"
                android:text="팜플렛 다운로드"
                android:textColor="#203040"
                android:textSize="30sp"
                android:textStyle="bold"
                app:backgroundTint="#FFEB3B"
                app:cornerRadius="22dp"
                app:rippleColor="@android:color/transparent" />

            <!-- 가운데: 페이지 표시 -->
            <TextView
                android:id="@+id/txtPage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="1 / 4"
                android:textColor="#203040"
                android:textSize="24sp" />

            <!-- 오른쪽: 테마 필터 적용하기 버튼 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewSem"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="4"
                android:layout_marginEnd="50dp"
                android:paddingHorizontal="0dp"
                android:paddingVertical="0dp"
                android:text="테마 필터 적용하기"
                android:textColor="#203040"
                android:textSize="30sp"
                android:textStyle="bold"
                app:backgroundTint="#f0f0f0"
                app:cornerRadius="22dp"
                app:rippleColor="@android:color/transparent" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rightBar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/g_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#0B84FF">

        <LinearLayout
            android:id="@+id/sideHeader"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:gravity="bottom|center"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                android:fontFamily="@font/pretendardbold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CO-SHOW"
                android:textStyle="bold"
                android:textColor="#FFEB3B"
                android:textSize="40sp"
                android:fontFamily="@font/pretendardbold"/>

            <View
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/coshowcharacter" />
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tileMap"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:layout_marginHorizontal="0dp"
            app:cardCornerRadius="0dp"
            app:cardBackgroundColor="#0B84FF"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/sideHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginVertical="25dp"
                android:layout_marginHorizontal="90dp"
                android:background="@drawable/map_icon2"
                android:textColor="#FFFFFF"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tileTime"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:layout_marginHorizontal="0dp"
            android:layout_marginTop="0dp"
            app:cardCornerRadius="0dp"
            app:cardBackgroundColor="#0B84FF"
            app:strokeColor="#FFEB3B"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/tileMap"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginVertical="25dp"
                android:layout_marginHorizontal="90dp"
                android:background="@drawable/theme_icon2" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tileEvent"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:layout_marginHorizontal="0dp"
            app:cardBackgroundColor="#0B84FF"
            app:cardCornerRadius="0dp"
            android:layout_marginTop="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tileTime"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="1dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginVertical="25dp"
                android:layout_marginHorizontal="90dp"
                android:background="@drawable/event_icon" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tileClock"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginHorizontal="0dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="0dp"
            app:cardBackgroundColor="#0A76E6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/txtClock"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="15:00"
                android:textStyle="bold"
                android:textSize="36sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/pretendardbold"/>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>