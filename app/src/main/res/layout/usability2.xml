<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/prev"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/arrow"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="130dp"
        android:rotation="180"
        android:elevation="20dp"/>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="120dp"
        app:strokeColor="#007AFF"
        app:strokeWidth="5dp">

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/q4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/pretendardbold"
                android:text="Temi 사용은 전반적으로 어땠나요?"
                android:textAlignment="center"
                android:textSize="35dp" />

            <RatingBar
                android:layout_marginTop="15dp"
                android:id="@+id/a4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="1.3"
                android:scaleY="1.3"
                android:numStars="5"
                android:stepSize="0.5"
                android:rating="0"
                android:layout_gravity="center"
                style="?android:attr/ratingBarStyle"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="100dp"
                android:background="#007AFF"/>

            <TextView
                android:id="@+id/q5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Temi 조작은 쉬웠나요?"
                android:fontFamily="@font/pretendardbold"
                android:textSize="35dp"
                android:textAlignment="center"/>

            <LinearLayout
                android:id="@+id/a5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_marginHorizontal="200dp">

                <ImageView
                    android:id="@+id/veryeasy2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="70dp"
                    android:src="@drawable/veryeasy"/>

                <ImageView
                    android:id="@+id/easy2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="70dp"
                    android:src="@drawable/easy"/>

                <ImageView
                    android:id="@+id/normal2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="70dp"
                    android:src="@drawable/normal"/>

                <ImageView
                    android:id="@+id/difficult2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="70dp"
                    android:src="@drawable/difficult"/>

                <ImageView
                    android:id="@+id/verydifficult2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="70dp"
                    android:src="@drawable/verydifficult"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="200dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="매우 쉬움"
                    android:fontFamily="@font/pretendardbold"
                    android:textSize="25dp"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="쉬움"
                    android:fontFamily="@font/pretendardbold"
                    android:textSize="25dp"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="보통"
                    android:fontFamily="@font/pretendardbold"
                    android:textSize="25dp"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="어려움"
                    android:fontFamily="@font/pretendardbold"
                    android:textSize="25dp"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="매우 어려움"
                    android:fontFamily="@font/pretendardbold"
                    android:textSize="25dp"
                    android:textAlignment="center"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="100dp"
                android:background="#007AFF"/>

            <TextView
                android:id="@+id/q6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="아쉬웠던 점 혹은 좋았던 점은 무엇인가요?"
                android:fontFamily="@font/pretendardbold"
                android:textSize="35dp"
                android:textAlignment="center"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="100dp"
                android:layout_marginTop="15dp">

                <EditText
                    android:id="@+id/a6"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="    터치해서 작성해주세요"
                    android:textSize="25dp"
                    android:fontFamily="@font/pretendardmedium"
                    android:inputType="textPersonName"
                    />

            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>



</RelativeLayout>
